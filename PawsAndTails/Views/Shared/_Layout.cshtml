                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="PFishes"><i class="fas fa-fish"></i> Fish</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="PBirds"><i class="fas fa-dove"></i> Birds</a></li>
