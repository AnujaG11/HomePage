    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha384-YeUETxJrTH8WBShKFlBRQ6QmUj8H5f4yNl5k6ZSVLcW8AlHhq+5ddQ7PCgp5qXda" crossorigin="anonymous">
    <!-- Your custom dark mode styles -->
    <style>
        body {
            background-color: #343a40; /* Dark background color */
            color: #ffffff; /* Light text color */
        }

        .carousel-inner {
            height: 100vh;
        }

            .carousel-inner img {
                object-fit: cover;
                height: 100%;
                width: 100%;
            }

        .shop-now-button {
            position: absolute;
            top: 50%;
            left: 50%;
